<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="15dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="16dp">


        <RelativeLayout
            android:id="@+id/rl_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#ffffff">


            <ImageView
                android:id="@+id/cam_image"
                android:layout_width="85dp"
                android:layout_height="85dp"
                android:layout_alignParentLeft="true"
                android:layout_margin="5dp"
                android:src="@drawable/no_image"
                android:scaleType="centerCrop" />

            <!-- Video Title -->
            <TextView
                android:id="@+id/shopname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/cam_image"
                android:layout_toRightOf="@id/cam_image"
                android:paddingBottom="5dp"
                android:paddingRight="5dp"
                android:text="shopname"
                android:textStyle="bold"
                android:layout_marginLeft="20dp"
                android:textColor="#ff01579b"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/gstno"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/cam_image"
                android:layout_marginTop="30dp"
                android:layout_toRightOf="@id/cam_image"
                android:paddingBottom="5dp"
                android:layout_marginLeft="20dp"
                android:paddingRight="5dp"
                android:text="gstnumber"
                android:textColor="#000000"
                android:textSize="15sp" />
            <TextView
                android:id="@+id/phnnumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/cam_image"
                android:layout_marginTop="60dp"
                android:layout_toRightOf="@id/cam_image"
                android:paddingBottom="5dp"
                android:paddingRight="5dp"
                android:text="phnnumber"
                android:layout_marginLeft="20dp"
                android:textColor="#000000"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/address"
                android:layout_width="180dp"
                android:layout_height="25dp"
                android:layout_alignTop="@id/cam_image"
                android:layout_marginTop="90dp"
                android:maxLines="1"
                android:paddingBottom="5dp"
                android:paddingRight="5dp"
                android:text="address"
                android:layout_marginLeft="20dp"
                android:textColor="#000000"
                android:textSize="15sp" />
        <!-- <TextView
                android:id="@+id/eventtime"
                android:layout_width="150dp"
                android:layout_height="30dp"
                android:layout_alignTop="@id/cam_image"
                android:layout_marginTop="120dp"

                android:paddingBottom="5dp"
                android:paddingRight="5dp"
                android:text=""
                android:layout_marginLeft="20dp"
                android:textColor="#000000"
                android:textSize="15sp" />-->


            <ImageView

            android:id="@+id/share"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
                android:layout_toRightOf="@id/address"
                android:layout_marginTop="90dp"
            android:orientation="vertical"
            android:layout_marginLeft="40dp"
            android:src="@drawable/sharelatest"
            android:text="fan"
            android:textSize="10dp"


            />
            <ImageView

                android:id="@+id/delete"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_toRightOf="@id/address"
                android:layout_marginTop="90dp"
                android:orientation="vertical"
                android:layout_marginLeft="110dp"
                android:src="@drawable/delicon"
                android:text="fan"
                android:textSize="10dp"


                />


        </RelativeLayout>
    </android.support.v7.widget.CardView>


</RelativeLayout>
